<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			background-color: #FFF;
			padding: 20px;
		}

		.link {
			font-weight: bold;
			font-size: 14px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.container}" ui:field="container">
			<g:HTML ui:field="statementDescription">Continutul enuntului il puteti gasi la urmatorul link:</g:HTML>
			<g:Anchor ui:field="statementAnchor" styleName="{style.link}">link enunt</g:Anchor>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>
