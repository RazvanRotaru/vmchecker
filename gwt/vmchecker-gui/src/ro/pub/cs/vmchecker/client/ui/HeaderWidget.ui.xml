<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.headerPanel {
			width: 100%;
		}

		.header {
			background-color: #EEEEEE;
			height: 54px;
			width: 100%;
			margin-bottom: 40px;
		}

		.logo {
			font-weight: bold;
			color: green;
			font-size: 18px;
			margin: 10px;
			line-height: 26px;
		}

		.listWrapper {
			margin-left: 10px;
		}

		.list {
			font-family:  'Lucida Grande', 'Lucida Sans Unicode', Arial, Verdana, sans-serif;
			font-size: 16px;
			line-height: 26px;
		}

		.courseListIndication {
			font-size: 11px;
			font-family: 'Lucida Grande', 'Lucida Sans Unicode', Arial, Verdana, sans-serif;
			color: #999999;
			padding: 2px;
		}

		.spacer {
			width: 100%;
		}

		.username {
			font-weight: bold;
			font-size: 14px;
			padding-right: 10px;
			line-height: 20px;
		}

		.rightPanel{
			margin: 17px 10px 0 0;
			vertical-align: middle;
			float: right;
		}

		.leftPanel {
			margin: 3px;
			float: left;
		}

		.last {
			border-right: none;
		}

		/*
		a, a:visited, a:hover {
			color: green;
		}

		a:hover {
			text-decoration: underline;
		}
		*/

		.clear {
			clear: both;
		}

	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.header}">
			<g:HorizontalPanel styleName="{style.leftPanel}" verticalAlignment='ALIGN_MIDDLE'>
			<g:HTML>
				<div class="logo"></div>
			</g:HTML>
			<g:FlowPanel styleName="{style.listWrapper}">
				<g:Label ui:field="courseSelection" styleName="{style.courseListIndication}">alegeti cursul</g:Label>
				<g:ListBox ui:field="coursesList" visibleItemCount='1' styleName="{style.list}" />
			</g:FlowPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="rightPanel" styleName="{style.rightPanel}">
				<g:Label ui:field="usernameLabel" styleName="{style.username}">nume.prenume</g:Label>
				<g:Anchor ui:field="logoutButton" styleName="fillButton">logout</g:Anchor>
			</g:HorizontalPanel>
			<g:SimplePanel styleName="{style.clear}"></g:SimplePanel>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>
