<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style type='ro.pub.cs.vmchecker.client.ui.HeaderWidget.HeaderStyle'>
		.headerPanel {
			width: 100%;
		}
	
		.header {
			background-color: #EEEEEE;
			height: 60px; 
			width: 100%;
			margin-bottom: 40px; 
		}
	
		.logo {
			font-weight: bold; 
			color: green;
			font-size: 18px;
			margin: 10px;
			line-height: 26px;    
		}
		
		.listWrapper {
			margin-left: 10px;
			margin-top: 9px;  
		}
		
		.list {
			font-family:  'Lucida Grande', 'Lucida Sans Unicode', Arial, Verdana, sans-serif; 
			font-size: 16px;
			line-height: 26px;  
		}
		
		.courseListIndication {
			font-size: 12px; 
			font-family: 'Lucida Grande', 'Lucida Sans Unicode', Arial, Verdana, sans-serif;
			color: #999999;
			margin-left: 2px; 
		}
		
		.spacer {
			width: 100%; 
		}
		
		.username {
			font-weight: bold;
			padding-right: 10px;
			line-height: 16px;  
		}
		
		.rightPanel{
			margin: 15px;
			vertical-align: middle;
			float: right;   
		}
		
		.leftPanel {
			margin: 3px;
			float: left;  
		}
			
		.anchor {
			color: green;
			margin: 3px;
			padding-right: 5px;
			font-size: 14px;
			cursor: pointer; 
		}
		
		.last {
			border-right: none; 
		}
		
		a, a:visited, a:hover {
			color: green; 
		}
		
		a:hover {
			text-decoration: underline; 
		}
		
		.statusPanel {
			top: 0px;
			left: 50%;  
			height: 16px; 
			position: fixed; 
			font-family: Verdana, Arial, sans serif; 
			font-size: 12px;
			padding: 5px 2px 5px 2px;  
		}
		
		.statusPanel a, .statusPanel a:hover, .statusPanel a:visited {
			color: white; 
			text-decoration: underline;
			font-size: 11px;
			cursor: pointer;   
		}
		
		.statusLabel {
			display: inline;
			font-weight: bold;
			padding: 2px;
			margin-top: 3px;  
		}
		
		.statusDetail {
			padding-left: 5px; 
		}
		
		.info {
			background-color: #E2E2E2;
			color: #000;   
		}
		
		.error {
			background-color: #9B0000;
			color: #FFF;  
		}
		
		.success {
			background-color: #7CBB6C;
			color: #FFF; 
		}
		
		.action {
			background-color: #FFCC66;  
		}
		
		.clear {
			clear: both; 
		}
		
		.detailsPopupContainer {
			overflow: scroll; 
		}
		
		.detailsPopupContent {
			margin-top: 10px; 
			padding-top: 10px; 
			border-top: 1px solid #CCCCCC; 
		}
		
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.header}">
			<g:HorizontalPanel styleName="{style.leftPanel}" verticalAlignment='ALIGN_MIDDLE'>
				<g:HTML>
					<div class="logo"></div>
				</g:HTML>
				<g:FlowPanel styleName="{style.listWrapper}">
					<g:ListBox ui:field="coursesList" visibleItemCount='1'
						styleName="{style.list}" />
					<g:Label styleName="{style.courseListIndication}">alege cursul</g:Label>
				</g:FlowPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="rightPanel" styleName="{style.rightPanel}"
				verticalAlignment='ALIGN_MIDDLE'>
				<g:Label ui:field="usernameLabel" styleName="{style.username}">nume.prenume</g:Label>
				<g:Anchor ui:field="logoutButton" styleName="{style.anchor}">logout</g:Anchor>
			</g:HorizontalPanel>
			<g:SimplePanel styleName="{style.clear}"></g:SimplePanel>
		</g:FlowPanel>
	<g:FlowPanel ui:field="statusPanel" styleName="{style.statusPanel}">
		<g:Label ui:field="statusLabel" styleName="{style.statusLabel}"></g:Label>
		<g:Anchor ui:field="statusDetailButton" styleName="{style.statusDetail}">detalii</g:Anchor>
	</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>